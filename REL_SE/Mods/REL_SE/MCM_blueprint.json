{
    "SchemaVersion": 1,
    "ModName": "REL_SE",
    "Tabs": [
        {
            "TabName": "Rarity Settings",
            "TabId": "Rarity",
            "Sections": [
                {
                    "SectionId": "rarity_chances",
                    "SectionName": "Global Rarity Chances (%)",
                    "Settings": [
                        {
                            "Id": "uncommonChance",
                            "Name": "Uncommon Chance",
                            "Type": "slider_int",
                            "Default": 25,
                            "Description": "The chance (%) of spawning an uncommon item. Items are rolled from highest to lowest rarity.",
                            "Options": {
                                "Min": 0,
                                "Max": 100
                            }
                        },
                        {
                            "Id": "rareChance",
                            "Name": "Rare Chance",
                            "Type": "slider_int",
                            "Default": 15,
                            "Description": "The chance (%) of spawning a rare item.",
                            "Options": {
                                "Min": 0,
                                "Max": 100
                            }
                        },
                        {
                            "Id": "veryRareChance",
                            "Name": "Very Rare Chance",
                            "Type": "slider_int",
                            "Default": 8,
                            "Description": "The chance (%) of spawning a very rare item.",
                            "Options": {
                                "Min": 0,
                                "Max": 100
                            }
                        },
                        {
                            "Id": "legendaryChance",
                            "Name": "Legendary Chance",
                            "Type": "slider_int",
                            "Default": 3,
                            "Description": "The chance (%) of spawning a legendary item. This is checked first.",
                            "Options": {
                                "Min": 0,
                                "Max": 100
                            }
                        }
                    ]
                }
            ]
        },
        {
            "TabName": "Item Count Settings",
            "TabId": "ItemCounts",
            "Sections": [
                {
                    "SectionId": "container_counts",
                    "SectionName": "Container & Enemy Item Counts",
                    "Settings": [
                        {
                            "Id": "containerItemCount",
                            "Name": "Container Item Count",
                            "Type": "slider_int",
                            "Default": 1,
                            "Description": "How many items to spawn in each container when opened.",
                            "Options": {
                                "Min": 0,
                                "Max": 50
                            }
                        },
                        {
                            "Id": "enemyItemCount",
                            "Name": "Normal Enemy Item Count",
                            "Type": "slider_int",
                            "Default": 1,
                            "Description": "How many items to spawn on normal enemies when looted.",
                            "Options": {
                                "Min": 0,
                                "Max": 50
                            }
                        },
                        {
                            "Id": "bossItemCount",
                            "Name": "Boss Item Count",
                            "Type": "slider_int",
                            "Default": 10,
                            "Description": "How many items to spawn on bosses when looted.",
                            "Options": {
                                "Min": 0,
                                "Max": 50
                            }
                        },
                        {
                            "Id": "commonContainerSpawnChance",
                            "Name": "Common Container Spawn Chance (%)",
                            "Type": "slider_int",
                            "Default": 20,
                            "Description": "The chance (%) for EACH item to spawn in common containers (barrels, crates, etc.). Regular chests have 100% chance. This applies per-item, not per-container.",
                            "Options": {
                                "Min": 0,
                                "Max": 100
                            }
                        }
                    ]
                }
            ]
        },
        {
            "TabName": "Consumables",
            "TabId": "Consumables",
            "Sections": [
                {
                    "SectionId": "consumable_counts",
                    "SectionName": "Consumable Counts",
                    "Settings": [
                        {
                            "Id": "scrollCount",
                            "Name": "Scroll Count",
                            "Type": "slider_int",
                            "Default": 1,
                            "Description": "How many scrolls to spawn in addition to regular items. Scrolls are picked randomly from the loot list.",
                            "Options": {
                                "Min": 0,
                                "Max": 20
                            }
                        },
                        {
                            "Id": "potionCount",
                            "Name": "Potion Count",
                            "Type": "slider_int",
                            "Default": 1,
                            "Description": "How many potions to spawn in addition to regular items. Potions are picked randomly from the loot list.",
                            "Options": {
                                "Min": 0,
                                "Max": 20
                            }
                        },
                        {
                            "Id": "arrowCount",
                            "Name": "Arrow Count",
                            "Type": "slider_int",
                            "Default": 0,
                            "Description": "How many arrows to spawn in addition to regular items. Arrows are picked randomly from the loot list.",
                            "Options": {
                                "Min": 0,
                                "Max": 20
                            }
                        }
                    ]
                }
            ]
        },
        {
            "TabName": "Trader Settings",
            "TabId": "Traders",
            "Sections": [
                {
                    "SectionId": "trader_settings",
                    "SectionName": "Trader Configuration",
                    "Settings": [
                        {
                            "Id": "traderEnabled",
                            "Name": "Enable Trader Support",
                            "Type": "checkbox",
                            "Default": true,
                            "Description": "If enabled, traders will have random items added to their inventory."
                        },
                        {
                            "Id": "traderItemCount",
                            "Name": "Trader Item Count",
                            "Type": "slider_int",
                            "Default": 5,
                            "Description": "How many items to add to each trader's inventory.",
                            "Options": {
                                "Min": 0,
                                "Max": 50
                            }
                        },
                        {
                            "Id": "traderScrollCount",
                            "Name": "Trader Scroll Count",
                            "Type": "slider_int",
                            "Default": 2,
                            "Description": "How many scrolls to add to each trader's inventory.",
                            "Options": {
                                "Min": 0,
                                "Max": 20
                            }
                        },
                        {
                            "Id": "traderPotionCount",
                            "Name": "Trader Potion Count",
                            "Type": "slider_int",
                            "Default": 3,
                            "Description": "How many potions to add to each trader's inventory.",
                            "Options": {
                                "Min": 0,
                                "Max": 20
                            }
                        },
                        {
                            "Id": "traderArrowCount",
                            "Name": "Trader Arrow Count",
                            "Type": "slider_int",
                            "Default": 1,
                            "Description": "How many arrows to add to each trader's inventory.",
                            "Options": {
                                "Min": 0,
                                "Max": 20
                            }
                        }
                    ]
                }
            ]
        },
        {
            "TabName": "Blacklist",
            "TabId": "Blacklist",
            "Sections": [
                {
                    "SectionId": "blacklist_settings",
                    "SectionName": "Container/Enemy Blacklist",
                    "Settings": [
                        {
                            "Id": "BlackList",
                            "Name": "Blacklist",
                            "Type": "list",
                            "Default": {
                                "elements": []
                            },
                            "Description": "Add containers, enemies, or traders by name to prevent them from receiving random loot.",
                            "Options": {
                                "element": {
                                    "name": {
                                        "Type": "text",
                                        "Name": "Name",
                                        "Description": "The name of the container/enemy/trader to blacklist."
                                    },
                                    "enabled": {
                                        "Type": "checkbox",
                                        "Name": "Enabled",
                                        "Description": "Whether this blacklist entry is active.",
                                        "Default": true
                                    }
                                }
                            }
                        }
                    ]
                }
            ]
        }
    ]
}
